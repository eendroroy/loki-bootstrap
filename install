#!/usr/bin/env bash
source helpers/update.sh
source helpers/upgrade.sh
source helpers/add-repo.sh
source helpers/install-package.sh
source helpers/clean.sh
source helpers/defaults.sh
source helpers/ppas.sh

# initialize
source scripts/init.sh

# install packages available in default archive
for i in "${packagesDefault[@]}"; do install-package $i; done

# add 3rd party archives
for i in "${ppas[@]}"; do add-repo $i; done
# update
update
# install packages from 3rd party archives
for i in "${packages[@]}"; do install-package $i; done

if [[ `lsb_release -cs` = "loki" ]]; then
  # add 3rd party loki archives
  for i in "${loki_ppas[@]}"; do add-repo $i; done
  # update
  update
  # install packages from 3rd party loki archives
  for i in "${loki_packages[@]}"; do install-package $i; done
fi

# execute custom installation scripts
source recipes/virtualbox-5.sh
source recipes/vagrant.sh
source recipes/docker.sh
source recipes/docker-compose.sh
source recipes/pyenv.sh
source recipes/rbenv.sh
source recipes/exenv.sh
source recipes/goenv.sh
source recipes/nodenv.sh
source recipes/zsh.sh
source recipes/neovim.sh
source recipes/add-getdeb-repo.sh
source recipes/google-apps.sh

# update, upgrade, clean
update
upgrade
clean

echo 
echo "###############################################"
echo "# to install nvidia drivers execute:          #"
echo "# $ bash customs/nvidia.sh                    #"
echo "###############################################"
echo
